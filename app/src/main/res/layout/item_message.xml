<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

  <LinearLayout
          android:id="@+id/viewLeft"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="0dp"
          android:gravity="bottom|clip_vertical"
          android:orientation="horizontal"
          android:paddingTop="0dp"
          android:paddingBottom="2dp">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageViewProfilePictureUserLeft"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0"
            android:scaleType="fitCenter"
            android:src="@drawable/default_avatar"
            app:riv_border_color="#333333"
            app:riv_border_width="0dip"
            app:riv_corner_radius="42dip"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="clamp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/background_received_message"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:visibility="visible">

      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

        <TextView
                android:id="@+id/textViewMessageItemNameUserLeft"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:fontFamily="@font/poppins_bold"
                android:text="User"
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/textViewMessageItemTextLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="16sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

          <TextView
                  android:id="@+id/textViewMessageItemDateTimeLeft"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="0"
                  android:text="Date"
                  android:textSize="12sp" />

          <ImageView
                  android:id="@+id/imageView4xxx5"
                  android:layout_width="12dp"
                  android:layout_height="12dp"
                  android:layout_marginLeft="2dp"
                  android:layout_weight="0"
                  app:srcCompat="@drawable/baseline_check_24" />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

    <View
            android:id="@+id/viewxxx6"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_weight="0" />

  </LinearLayout>

  <LinearLayout
          android:id="@+id/viewRight"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="0dp"
          android:gravity="bottom|clip_vertical|end"
          android:orientation="horizontal"
          android:paddingTop="0dp"
          android:paddingBottom="2dp">

    <View
            android:id="@+id/viewxxx7"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_weight="0" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/background_sent_message"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:visibility="visible">

      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

        <TextView
                android:id="@+id/textViewMessageItemNameUser"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:fontFamily="@font/poppins_bold"
                android:text="User"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/textViewMessageItemText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textColor="@color/white"
                android:textSize="16sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

          <TextView
                  android:id="@+id/textViewMessageItemDateTime"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="0"
                  android:text="date"
                  android:textColor="@color/white"
                  android:textSize="12sp" />

          <ImageView
                  android:id="@+id/imageView4xxx10"
                  android:layout_width="12dp"
                  android:layout_height="12dp"
                  android:layout_marginLeft="2dp"
                  android:layout_weight="0"
                  app:srcCompat="@drawable/baseline_check_24" />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageViewProfilePictureUser"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="0dp"
            android:layout_weight="0"
            android:scaleType="fitCenter"
            android:src="@drawable/default_avatar"
            app:riv_border_color="#333333"
            app:riv_border_width="0dip"
            app:riv_corner_radius="42dip"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="clamp" />

  </LinearLayout>
</LinearLayout>