<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clickable="true"
        android:focusable="true"
        android:background="@color/md_theme_light_tertiaryContainer"
        android:foreground="?attr/selectableItemBackground">

  <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="0dp"
          android:paddingTop="0dp"
          android:paddingRight="0dp"
          android:paddingBottom="0dp">

    <LinearLayout
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:clickable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp">

      <com.makeramen.roundedimageview.RoundedImageView
              android:id="@+id/imageViewProfileUser"
              android:layout_width="42dp"
              android:layout_height="42dp"
              android:layout_marginRight="0dp"
              android:layout_weight="0"
              android:clickable="false"
              android:contextClickable="true"
              android:scaleType="fitCenter"
              android:src="@drawable/default_avatar"
              app:riv_border_color="#333333"
              app:riv_border_width="0dip"
              app:riv_corner_radius="42dip"
              app:riv_mutate_background="true"
              app:riv_oval="true"
              app:riv_tile_mode="clamp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingTop="12dp"
              android:paddingRight="16dp"
              android:paddingBottom="12dp">

        <TextView
                android:id="@+id/textViewNameChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/txtLastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp" />

      </LinearLayout>

      <View
              android:id="@+id/view"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#9e9e9e" />

    </LinearLayout>

    <!--<ImageView
            android:id="@+id/imageViewCheckChat"
            app:srcCompat="@drawable/baseline_check_24"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="0" /> -->
  </LinearLayout>

</LinearLayout>


